@model IEnumerable<LinkSaver.Models.Link>

@{
    ViewData["Title"] = "Index";
}
<div id="content">
    <h2>Index</h2>
    <div id="creatediv">
        <p>
            <a asp-action="Create" data-ajax="true" data-ajax-mode="replace-with" data-ajax-update="#creatediv">
                [+]
            </a> Add Link
        </p>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.url)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Link item in Model)
            {
                <tr>
                    <td>
                       <a asp-action="Category" asp-route-slug="@item.category.UrlSlug">@item.category.Name</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.title)
                    </td>
                    <td>
                        <a href="@item.prependUrl()">@item.url</a>
            </td>
            <td>
                @await Component.InvokeAsync("PublicLinkButtons", item)
            </td>
        </tr>
            }
        </tbody>
    </table>
</div>
