@model LinkSaver.Models.LinkCreationViewModel

@{
    ViewData["Title"] = "Create";
}


<form asp-action="Create" >
    <div class="form-horizontal">
        <h4>Create Link</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="category" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="category" class="form-control" />
                <span asp-validation-for="category" class="text-danger" />
            </div>
        </div>
       
        <!-- 
         <div class="form-group">
            <label asp-for="title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="title" class="form-control" />
                <span asp-validation-for="title" class="text-danger" />
            </div>
        </div>
            -->
        <div class="form-group">
            <label asp-for="url" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="url" class="form-control" />
                <span asp-validation-for="url" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" data-ajax="true" data-ajax-mode="replace-with" data-ajax-update="#content"
       >-</a> Hide Link Creation
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
